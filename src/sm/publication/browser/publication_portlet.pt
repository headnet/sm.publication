<div class="portletPublication" />
<dl class="portletPublication"
    i18n:domain="plone">

    <dt class="portletHeader"
        tal:define="header view/data/header">
        <span class="portletTopLeft"></span>
        <span tal:content="header"></span>
        <span class="portletTopRight"></span>
    </dt>

    <tal:block condition="view/publication_year">
      <label>Udgivelses√•r</label>
      <br/>
      <tal:block content="view/publication_year"/>
      <br/><br/>
    </tal:block>

    <tal:block condition="here/author">
      <label>Forfatter</label>
      <br/>
      <tal:block content="here/author"/>
      <br/><br/>
    </tal:block>

    <tal:block condition="here/coauthors | nothing">
      <label>Medforfattere</label>
      <br/>
      <tal:block content="here/coauthors | nothing"/>
      <br/><br/>
    </tal:block>

    <tal:block condition="here/copyright | nothing">
      <label>Copyright</label>
      <br/>
      <tal:block content="here/copyright | nothing"/>
      <br/><br/>
    </tal:block>

    <tal:block condition="here/publisher">
      <label>Udgiver</label>
      <br/>
      <tal:block content="here/publisher"/>
      <br/><br/>
    </tal:block>

    <tal:block condition="view/publication_subjects">
      <label>Emneord</label>
      <ul class="listTypeMark">
      <tal:block repeat="subject view/publication_subjects">
        <li tal:content="subject"/>
      </tal:block>
      </ul>
    </tal:block>

    <tal:block condition="here/price | nothing">
      <label>Pris</label>
      <br/>
      <tal:block content="here/price | nothing"/>
      <br/><br/>
    </tal:block>

    
</dl>
